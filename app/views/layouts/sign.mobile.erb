<!DOCTYPE html>
<html>
<head>
  <title><%= t(:title) %></title>
  	<%= csrf_meta_tag %>

    <%= stylesheet_link_tag "/jqtouch/jqtouch.css", "/jqtouch/themes/apple/theme.css" %>
    <%= javascript_include_tag "/jqtouch/jquery-1.4.2.min.js", "/jqtouch/jqtouch.js", "mobile" %>
	<%= javascript_include_tag :defaults %>  
  </head>
</head>
<body>
<div style="min-height: 1093px;" id="animations" class="current">

		<div class="toolbar">
			<h1><%=h link_to t(:title), root_url %> </h1>		
		</div>

	<h2><%= yield :sign_title %></h2>
		<% unless flash.empty? %>
		  <div id="flash_messages" class="info">
		    <% flash.each do |type, message| -%>
				<%= content_tag :div, message, :id => "flash_#{type}" %>
				<% flash.discard %>
		    <% end -%>
		  </div>
		<% end %>

      <%= yield %>
			
	</div>
</body>
</html>
