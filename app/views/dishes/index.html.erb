<% content_for :local_content do %>

<table class="table">
  <tr>
    <th class="first"><%= sortable "name" %></th>
    <th><%= sortable "price" %></th>
    <th><%= sortable "description" %></th>
    <th><%= sortable "style_list" %></th>
    <th><%= sortable "note" %></th>
    <th class="last"></th>
  </tr>

<% @dishes.each_with_index do |dish, i| %>
  <tr class="<%= (i%2 == 1) ? ("even") : ("odd") %>">
    <td><%= dish.name %></td>
    <td><%= dish.price %></td>
    <td><%= dish.description %></td>
	<td><%= dish.style_list.first if dish.style_list %></td>
    <td><%= dish.note %></td>
    <td class="last"><%= link_to 'Show', dish %> | 
    <%= link_to 'Edit', edit_dish_path(dish) %>|
    <%= link_to 'Destroy', dish, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />



<div class="actions-bar wat-cf">
  <div class="actions">
	<%=  link_to  image_tag("/images/icons/plus.png") + I18n.t(:new_dish) , new_dish_path, :class => "button" %>
  </div>

	<div class="pagination">
  		<%= will_paginate @customers  %>
  </div>

<% end %>

<%= render 'shared/local_content',  :subtitle => I18n.t(:dishes_list) %>


