<!DOCTYPE html>
<html>
<head>
  <title><%= t(:title) %></title>
  	<%= csrf_meta_tag %>

	<script type="text/javascript" src="http://www.google.com/jsapi"></script>
	<script type="text/javascript"> google.load("jquery", "1.4.2"); </script>
    <%= stylesheet_link_tag "/jqtouch/jqtouch.css", "/jqtouch/themes/apple/theme.css" %>
    <%= javascript_include_tag "/jqtouch/jquery-1.4.2.min.js", "/jqtouch/jqtouch.js", "mobile" %>
	<%= javascript_include_tag :defaults %>  
  </head>
</head>
<body>

<div style="min-height: 1093px;" id="animations" class="current">
	<div id="ajax">
		<div class="toolbar">
			<%= button_to 'Back', :back, :class => "back" unless current_page? root_path %>
			<h1><%=h link_to t(:title), root_url %> </h1>		
		</div>
	</div>
	<h2><%= yield :sign_title %></h2>
		<%= render :partial => 'layouts/flash', :locals => {:flash => flash} %>
      	<%= yield %>
			
	</div>

</body>
</html>
