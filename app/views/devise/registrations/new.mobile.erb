<% content_for :sign_title, "Sign up" -%>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
	<% unless resource.errors.empty? %>
		<div class="info">
	  		<%= devise_error_messages! %>
		</div>
	<% end %>

	<ul class="edit rounded">
		<li><%= f.email_field :email, :placeholder => t(:email), :autocapitalize => "off", :autocorrect => "off", :autocomplete => "off" %></li>
		<li><%= f.text_field :username, :placeholder => t(:username), :autocapitalize => "off", :autocorrect => "off", :autocomplete => "off" %></li>
		<li><%= f.text_field :phone, :placeholder => t(:phone) %></li>
		<li><%= f.password_field :password, :placeholder => t(:password) %></li>
		<li><%= f.password_field :password_confirmation, :placeholder => t(:password_confirmation) %></li>
	
		<li><%= f.submit :value => t(:signup) %></li>
	</ul>

<% end %>

<%= render :partial => "devise/shared/links" %>
