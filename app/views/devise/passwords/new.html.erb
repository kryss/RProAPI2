<% content_for :sign_title, "Forgot your password?" -%>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => "form login"  }) do |f| %>
  <%= devise_error_messages! %>

	<div class='group wat-cf'>
		  <div class='left'><%= f.label :email, :class => "label right" %></div>
		  <div class='right'><%= f.email_field :email, :class => "text_field" %></div>
	</div>
	<div class='group wat-cf'>
		<div class='right'>
			<button class='button' type='submit'>
				<%= image_tag  "/images/web-app-theme/icons/tick.png" %>
		      	Send me reset password instructions
		    </button>
		</div>
	</div>
<% end %>

<%= render :partial => "devise/shared/links" %>