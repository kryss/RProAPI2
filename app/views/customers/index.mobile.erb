<div id="customer_list">
	<div class="toolbar">
		<%= link_to 'Back', nil, :class => "back" %>
		<h1><%= t(:customer)  %> </h1>
	</div>

	<ul class="rounded">
	<% @customers.each_with_index do |customer, i| %>
		<li class="arrow"><%= link_to customer.name, customer_path(customer), :remote => true %></li>
	<% end %>
	</ul>
</div>